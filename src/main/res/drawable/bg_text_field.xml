<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape>
            <corners android:radius="8dp" />
            <gradient
                android:angle="90"
                android:endColor="#121212"
                android:startColor="#6D6D6D" />
        </shape>
    </item>

    <item
        android:bottom="2dp"
        android:top="1dp">
        <shape>
            <corners android:radius="8dp" />
            <gradient
                android:angle="90"
                android:endColor="#1D1D1D"
                android:startColor="#454545" />
        </shape>
    </item>
</layer-list>