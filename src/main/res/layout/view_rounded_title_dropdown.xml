<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/containerView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/headerTitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12px"
        android:fontFamily="@font/rajdhani_medium"
        android:text="SET OUTSIDE DIAMETER"
        android:textAllCaps="true"
        android:textColor="@color/colorGreen"
        android:textSize="28px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/llContainer"
        android:layout_width="wrap_content"
        android:layout_height="93px"
        android:layout_marginTop="12px"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/headerTitleText"
        app:layout_goneMarginTop="0pt">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/rajdhani_bold"
            android:minWidth="116px"
            android:paddingStart="55px"
            android:text="1"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="24px" />

        <View
            android:id="@+id/rightDivider"
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_marginTop="8px"
            android:background="@color/colorLightGrey" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/rightImageView"
            android:layout_width="93px"
            android:layout_height="20px"
            android:layout_gravity="center_vertical|end"
            android:background="?android:selectableItemBackgroundBorderless"
            android:src="@drawable/ic_drop_down_rounded"
            android:tint="@color/colorGreen" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>